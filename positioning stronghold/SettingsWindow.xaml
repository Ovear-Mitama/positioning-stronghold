<Window x:Class="positioning_stronghold.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:positioning_stronghold.Pages"
        mc:Ignorable="d"
        Title="设置" Height="350" Width="450"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Content" Value="✕"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Background" Value="#1c1c1c"/>
            <Setter Property="Foreground" Value="#A0A0A0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="0,10,0,0" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E74C3C"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="NavigationItemStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Border x:Name="ItemBorder" Background="Transparent" Padding="15,12" Panel.ZIndex="0">
                                <TextBlock x:Name="ItemText" Text="{TemplateBinding Content}" FontSize="13" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                            </Border>
                            <Border x:Name="SelectionBorder" Background="#3FA9F0" Width="3" HorizontalAlignment="Left" Opacity="0" Panel.ZIndex="1">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleY="0" ScaleX="1" CenterY="25"/>
                                </Border.RenderTransform>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#212529"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SelectionBorder" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="SelectionBorder" Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <ColorAnimation Storyboard.TargetName="ItemText" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" To="#3FA9F0" Duration="0:0:0.2">
                                                <ColorAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SelectionBorder" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="SelectionBorder" Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)" To="0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <ColorAnimation Storyboard.TargetName="ItemText" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" To="#E0E0E0" Duration="0:0:0.2">
                                                <ColorAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </ColorAnimation.EasingFunction>
                                            </ColorAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="FeatureCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="CheckBorder" Background="#2c2c2c" BorderBrush="#3E3E3E" BorderThickness="1" CornerRadius="3" Padding="5,2" Width="16" Height="16">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="0" ScaleY="0" CenterY="8"/>
                                </Border.RenderTransform>
                            </Border>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,0,0,0"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="#1c1c1c" CornerRadius="10" BorderBrush="#3E3E3E" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" Background="#1c1c1c" CornerRadius="10,10,0,0" MouseLeftButtonDown="Window_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="设置" FontSize="12" FontWeight="Bold" Foreground="#E0E0E0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    <Button Grid.Column="1" x:Name="CloseButton" Style="{StaticResource CloseButtonStyle}" Click="Close_Click" Margin="0"/>
                </Grid>
            </Border>
            
            <Border Grid.Row="0" Grid.RowSpan="2" BorderBrush="#3E3E3E" BorderThickness="0,0,0,1" VerticalAlignment="Bottom" Margin="0,29,0,0"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Grid.RowSpan="2" BorderBrush="#3E3E3E" BorderThickness="0,0,1,0">
                    <StackPanel>
                        <RadioButton x:Name="BasicNav" Content="基本功能" Style="{StaticResource NavigationItemStyle}" GroupName="Navigation" Checked="Navigation_Checked"/>
                        <RadioButton x:Name="AboutNav" Content="关于" Style="{StaticResource NavigationItemStyle}" GroupName="Navigation" Checked="Navigation_Checked"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1">
                    <Grid>
                        <Border BorderBrush="#3E3E3E" BorderThickness="0,0,0,1" VerticalAlignment="Top" Margin="0,0,0,0"/>
                        <ContentControl x:Name="ContentFrame"/>
                        <Border BorderBrush="#3E3E3E" BorderThickness="0,0,0,1" VerticalAlignment="Bottom" Margin="0,0,0,0"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>