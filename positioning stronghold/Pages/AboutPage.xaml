<UserControl x:Class="positioning_stronghold.Pages.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:positioning_stronghold.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="370" d:DesignWidth="400"
      Background="#1c1c1c">
    <UserControl.Resources>
        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#3FA9F0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}" TextDecorations="Underline">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#6BCBFF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="关于" FontSize="16" FontWeight="Bold" Foreground="#E0E0E0" Margin="0,0,0,20"/>
            
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Width="80" Height="80" CornerRadius="0" Background="Transparent" BorderThickness="0">
                    <local:GifImage x:Name="LogoImage" GifSource="pack://application:,,,/Images/mitama-logo.gif" Stretch="UniformToFill"/>
                </Border>
                <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="positioning stronghold" FontSize="14" FontWeight="Bold" Foreground="#E0E0E0" Margin="0,0,0,5"/>
                    <TextBlock Text="版本 1.0.0" FontSize="11" Foreground="#A0A0A0" Margin="0,0,0,5"/>
                    <TextBlock Text="作者: mitama" FontSize="11" Foreground="#A0A0A0"/>
                </StackPanel>
            </Grid>
            
            <TextBlock Text="© 2024-2026 mitama. All rights reserved." FontSize="10" Foreground="#A0A0A0" Margin="0,0,0,20" TextWrapping="Wrap"/>
            
            <Button Content="查看源代码" Style="{StaticResource LinkButtonStyle}" Click="ViewSource_Click" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</UserControl>