<UserControl x:Class="positioning_stronghold.Pages.BasicPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:positioning_stronghold.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="370" d:DesignWidth="400"
      Background="#1c1c1c">
    <UserControl.Resources>
        <Style x:Key="FeatureCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#3FA9F0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="CheckBorder" Grid.Column="0" Background="#2c2c2c" BorderBrush="#3E3E3E" BorderThickness="1.75" CornerRadius="0" Padding="0" Width="16" Height="16" VerticalAlignment="Center"/>
                            <ContentPresenter Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,0,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckBorder" Property="Background" Value="#3FA9F0"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="CheckBorder" Property="Background" Value="#2c2c2c"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="基本功能" FontSize="16" FontWeight="Bold" Foreground="#E0E0E0" Margin="0,0,0,20"/>
            
            <CheckBox x:Name="TopmostCheckBox" Content="置于顶层" Style="{StaticResource FeatureCheckBoxStyle}" Checked="Topmost_Checked" Unchecked="Topmost_Unchecked" Margin="0,0,0,15"/>
            
            <CheckBox x:Name="TransparentCheckBox" Content="窗体透明" Style="{StaticResource FeatureCheckBoxStyle}" Checked="Transparent_Checked" Unchecked="Transparent_Unchecked" Margin="0,0,0,15"/>
        </StackPanel>
    </Grid>
</UserControl>