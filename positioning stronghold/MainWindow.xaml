<Window x:Class="positioning_stronghold.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:positioning_stronghold"
        mc:Ignorable="d"
        Title="positioning stronghold" Height="Auto" Width="440"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanMinimize"
        SizeToContent="Height" d:DesignHeight="200">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1c1c1c"/>
            <Setter Property="Foreground" Value="#A0A0A0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#212529"/>
                                <Setter Property="Foreground" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Content" Value="-"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="4,0"/>
            <Setter Property="Background" Value="#1c1c1c"/>
            <Setter Property="Foreground" Value="#A0A0A0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" VerticalAlignment="Stretch">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E74C3C"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SettingsButtonStyle" TargetType="Button">
            <Setter Property="Content" Value="⚙"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="Background" Value="#1c1c1c"/>
            <Setter Property="Foreground" Value="#A0A0A0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#212529"/>
                                <Setter Property="Foreground" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Content" Value="✕"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="Background" Value="#1c1c1c"/>
            <Setter Property="Foreground" Value="#A0A0A0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="0,10,0,0" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E74C3C"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border Background="#1c1c1c" CornerRadius="10" BorderBrush="#3E3E3E" BorderThickness="1">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" Background="#1c1c1c" CornerRadius="10,10,0,0" MouseLeftButtonDown="Window_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="positioning stronghold" FontSize="13" FontWeight="Bold" Foreground="#E0E0E0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,0">
                        <Button x:Name="SettingsButton" Style="{StaticResource SettingsButtonStyle}" Click="Settings_Click" Margin="0"/>
                        <Button x:Name="MinimizeButton" Content="─" FontSize="16" Padding="8,0" Click="Minimize_Click" Style="{StaticResource WindowButtonStyle}" Margin="0"/>
                        <Button x:Name="CloseButton" Style="{StaticResource CloseButtonStyle}" Click="Close_Click" Margin="0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="190"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" BorderBrush="#3E3E3E" BorderThickness="1" Margin="8,8,8,8" Background="#1c1c1c">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0" Background="#1c1c1c" Padding="8,2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="末影之眼" FontSize="11" FontWeight="Bold" Foreground="#E0E0E0" HorizontalAlignment="Left" Margin="0,0,8,0"/>
                                <Button Grid.Column="1" x:Name="UndoButton" Content="撤销" FontSize="11" Padding="8,4" Click="Undo_Click" Style="{StaticResource WindowButtonStyle}" Margin="0"/>
                                <Button Grid.Column="2" x:Name="RedoButton" Content="重做" FontSize="11" Padding="8,4" Click="Redo_Click" Style="{StaticResource WindowButtonStyle}" Margin="0"/>
                                <Button Grid.Column="3" x:Name="ResetButton" Content="重置" FontSize="11" Padding="8,4" Click="Reset_Click" Style="{StaticResource WindowButtonStyle}" Margin="0"/>
                            </Grid>
                        </Border>
                        
                        <Border Grid.Row="1" Background="#1c1c1c" Padding="4,2" BorderBrush="#33383d" BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="X" FontWeight="Bold" HorizontalAlignment="Center" FontSize="11" Foreground="#E0E0E0"/>
                                <TextBlock Grid.Column="1" Text="Z" FontWeight="Bold" HorizontalAlignment="Center" FontSize="11" Foreground="#E0E0E0"/>
                                <TextBlock Grid.Column="2" Text="角度" FontWeight="Bold" HorizontalAlignment="Center" FontSize="11" Foreground="#E0E0E0"/>
                                <Border Grid.Column="3" Width="20"/>
                            </Grid>
                        </Border>
                        
                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" MinHeight="70">
                            <ItemsControl ItemsSource="{Binding MeasurementPoints}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#33383d" BorderThickness="0,0,0,1" Padding="4,2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding DisplayX}" HorizontalAlignment="Center" FontSize="10" Foreground="#E0E0E0"/>
                                                <TextBlock Grid.Column="1" Text="{Binding DisplayZ}" HorizontalAlignment="Center" FontSize="10" Foreground="#E0E0E0"/>
                                                <TextBlock Grid.Column="2" Text="{Binding DisplayYaw}" HorizontalAlignment="Center" FontSize="10" Foreground="#E0E0E0"/>
                                                <Button Grid.Column="3" Style="{StaticResource DeleteButtonStyle}" Click="DeletePoint_Click" Tag="{Binding Id}" FontSize="10"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <Border Grid.Column="1" BorderBrush="#3E3E3E" BorderThickness="1" Margin="0,8,8,8" Background="#1c1c1c">
                    <StackPanel Margin="8">
                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Text="预测坐标" FontSize="12" FontWeight="Bold" Foreground="#4CAF50" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding ResultXY}" FontSize="15" FontWeight="Bold" Foreground="#E0E0E0" Margin="0,2,0,0"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="状态" FontSize="12" FontWeight="Bold" Foreground="#A0A0A0" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding Status}" TextWrapping="Wrap" Foreground="#E0E0E0" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
